            </td>
        </tr>
        </table>
        <!--post 2-->
    </section>

    <!--End of At A Glance-->

    <!--recent friend post json table-->
    <section class="recent_friend_post">
    <h2 class="title2">Recent Friend Post</h2>
        <!--table-->
    <table>
    <div>        
    {{#each friends}}
      <div class="json">
        <tr>
            <td>
                <img src={{img}}>
            </td>
            <td>
                <p>{{name}}      {{time}}<br>
                Mood: <i>{{mood}}</i><br>
                {{description}}</p>
            </td>
        </tr>
      </div>
    {{/each}}
    </div>
    </table>
    </section>
    <!--End of json table-->

</body>
